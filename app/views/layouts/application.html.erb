<!DOCTYPE html>
<html>
<head>
  <title>LambdaChiRushTracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <%= link_to search_rushees_url, class: "btn btn-default navbar-btn navbar-left" do %>
        <span class="glyphicon glyphicon-search"></span>
        <span>Search Rushees</span>
      <% end %>
      <%= link_to new_rushee_url, class: "btn btn-default navbar-btn navbar-right" do %>
        <span class="glyphicon glyphicon-plus"></span>
        <span>Add Rushee</span>
      <% end %>
    </div>
  </nav>

  <div class="container-fluid">
    <%= yield %>
  </div>

</body>
</html>
